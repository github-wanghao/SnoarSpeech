<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:background="#CCCCCC">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:background="#01579B"
        android:id="@+id/alarmClockRelativeLayout1"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="30px"
            android:background="#003399"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:layout_centerVertical="true"
            android:id="@+id/alarmClockMainReturnButton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="添加"
            android:textColor="#ffffff"
            android:textSize="30px"
            android:background="#FFCCCC"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:layout_centerVertical="true"
            android:id="@+id/alarmClockMainAddButton"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闹钟"
            android:textColor="#ffffff"
            android:textSize="50px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/alarmTitle"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".AlarmClockMainActivity"
        android:layout_below="@id/alarmClockRelativeLayout1">

        <ListView
            android:id="@+id/alarmClockList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </ListView>


    </RelativeLayout>

</RelativeLayout>