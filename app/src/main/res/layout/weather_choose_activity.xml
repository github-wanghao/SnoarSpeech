<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:background="#CCCCCC">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:background="#01579B"
        android:id="@+id/weatherChooseRelativeLayout1"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="30px"
            android:background="#003399"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:layout_centerVertical="true"
            android:id="@+id/weatherChooseReturnButton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="本地"
            android:textColor="#ffffff"
            android:textSize="30px"
            android:background="#66CCCC"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:layout_centerVertical="true"
            android:id="@+id/weatherChooseLocationButton"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择地方"
            android:textColor="#ffffff"
            android:textSize="50px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".AlarmClockSettingActivity"
        android:layout_below="@id/weatherChooseRelativeLayout1">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/placeInput"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:background="#FF6666"
            android:text="确定"
            android:layout_below="@id/placeInput"
            android:id="@+id/placeInputComfirmButton"
            />

    </RelativeLayout>



</RelativeLayout>